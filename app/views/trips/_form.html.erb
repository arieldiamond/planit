<div class="pure-form" >
  <%= form_for(@trip) do |f| %>
    <% if @trip.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@trip.errors.count, "error") %> prohibited this trip from being saved:</h2>

        <ul>
        <% @trip.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </div>
    <div class="field">
      <%= f.label :location %><br>
      
      <%= f.text_field :location, placeholder: "e.g. Dev BootCamp, Chicago, IL" %>
    </div>
    <div class="field">
      <%= f.label :start_date %><br>
      <%= f.datetime_select :start_date %>
    </div>
    <div class="field">
      <%= f.label :end_date %><br>
      <%= f.datetime_select :end_date %>
    </div>


    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>
